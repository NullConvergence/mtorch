{
  "name": "Cifar10_ResNet_18",
  "n_gpu": 2,
  "arch": {
    "type": "ResNet18",
    "args": {
      "num_channels": 3,
      "num_classes": 10
    }
  },
  "train_data_loader": {
    "type": "CIFAR10Loader",
    "args": {
      "data_dir": "downloaded-data/",
      "batch_size": 256,
      "shuffle": true,
      "validation_split": 0.0,
      "num_workers": 4
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.005,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss_function": {
    "type": "NLL",
    "args": {}
  },
  "metrics": [
    {
      "type": "Accuracy",
      "args": {}
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "type": "GenericTrainer",
    "args": {},
    "epochs": 5000,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min train_loss",
    "early_stop": 100
  },
  "test": {
    "do": true,
    "test_epochs_interval": 100,
    "test_batch_size": 100
  },
  "logger": {
    "_comment": "index_batches decides if we index the loss and the metrics at every batch size or after one epoch (all batches)",
    "index_batches": false,
    "log_params": false,
    "log_train_images": false,
    "log_test_images": false,
    "tensorboard_logs": {
      "do": false
    },
    "sacred_logs": {
      "do": true,
      "mongo_url": "mongodb://root:example@192.168.178.75:27017/admin?authMechanism=SCRAM-SHA-1",
      "db_name": "sacred-db",
      "settings": {
        "DISCOVER_SOURCES": "sys",
        "CAPTURE_MODE": "no"
      }
    }
  }
}