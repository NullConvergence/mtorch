{
  "name": "Cifar10_ResNet34_PGDMadry",
  "host": {
    "name": "x4",
    "gpu_settings": {
      "custom_gpu": {
        "do": false,
        "id": 0
      },
      "multiple_gpus": {
        "do": true,
        "nr_gpus": 2
      }
    }
  },
  "data": {
    "loader": {
      "type": "CIFAR10Loader",
      "args": {
        "data_dir": "downloaded-data/",
        "batch_size": 128,
        "shuffle": false,
        "validation_split": 0.0,
        "num_workers": 1,
        "transformations": "CIFARTransformations"
      }
    }
  },
  "model": {
    "arch": {
      "type": "ResNet34",
      "args": {
        "num_channels": 3,
        "num_classes": 10
      }
    },
    "loss_function": {
      "type": "CrossEntropy",
      "args": {}
    }
  },
  "optimizer": {
    "opt": {
      "type": "SGD",
      "args": {
        "lr": 0.1,
        "weight_decay": 0.0002,
        "momentum": 0.9
      }
    },
    "lr_schedulers": [
      {
        "type": "DynamicLRScheduler",
        "args": {
          "priority": 0,
          "epochs": [
            120,
            170
          ],
          "lr_values": [
            0.01,
            0.001
          ]
        }
      },
      {
        "type": "TorchScheduler",
        "args": {
          "priority": 1,
          "name": "StepLR",
          "step_size": 5,
          "gamma": 0.0001
        }
      }
    ]
  },
  "metrics": [
    {
      "type": "EpochAccuracy",
      "args": {}
    },
    {
      "type": "AdversarialAccuracy",
      "args": {}
    }
  ],
  "training": {
    "trainer": {
      "type": "FreeAdversarialTrainer",
      "args": {
        "eps": 4.0,
        "batch_iterations": 4,
        "new_perturbation": false,
        "attack_type": "LinfPGDAttack",
        "attack_params": {
          "ratio": 255,
          "kwargs": {
            "eps": 8.0,
            "nb_iter": 10,
            "eps_iter": 2.0,
            "rand_init": true,
            "clip_min": 0.0,
            "clip_max": 1.0,
            "targeted": false
          }
        }
      }
    },
    "epochs": 250,
    "save_dir": "saved/",
    "save_period": 20,
    "log_verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100
  },
  "testing": {
    "do": false,
    "test_epochs_interval": 10,
    "test_batch_size": 128
  },
  "logging": {
    "_comment": "index_batches decides if we index the loss and the metrics at every batch size or after one epoch (all batches)",
    "index_batches": false,
    "log_params": false,
    "log_train_images": false,
    "log_test_images": false,
    "tensorboard_logs": {
      "do": false
    },
    "sacred_logs": {
      "do": false,
      "mongo_url": "mongodb://192.168.178.26:27017",
      "db_name": "sacred-db",
      "settings": {
        "DISCOVER_SOURCES": "sys",
        "CAPTURE_MODE": "sys"
      }
    },
    "infrastructure_logs": {
      "do": false,
      "config": {
        "time": 5,
        "save_dir": "saved/",
        "metrics": [
          {
            "type": "CpuLoad"
          },
          {
            "type": "CpuTemp",
            "args": {
              "tmp_key": "k10temp"
            }
          },
          {
            "type": "GPUs"
          },
          {
            "type": "Memory"
          }
        ],
        "elk": {
          "elastic": {
            "host": "http://192.168.178.26:9200/",
            "index": {
              "name": "experiment-metrics",
              "config": {
                "mappings": {
                  "_default_": {
                    "_timestamp": {
                      "enabled": true,
                      "store": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}