{
  "name": "CIFAR10_ResNet18_PGD",
  "hostname": "x4",
  "n_gpu": 2,
  "arch": {
    "type": "ResNet18",
    "args": {
      "num_channels": 3,
      "num_classes": 10
    }
  },
  "train_data_loader": {
    "type": "CIFAR10Loader",
    "args": {
      "data_dir": "downloaded-data/",
      "batch_size": 128,
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 8
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.002,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss_function": {
    "type": "CrossEntropy",
    "args": {}
  },
  "metrics": [
    {
      "type": "EpochAccuracy",
      "args": {}
    },
    {
      "type": "AdversarialAccuracy",
      "args": {}
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "type": "AdversarialTrainer",
    "args": {
      "attack_type": "LinfPGDAttack",
      "attack_params": {
        "eps": 0.3,
        "nb_iter": 30,
        "eps_iter": 0.01,
        "clip_min": 0.0,
        "clip_max": 1.0,
        "targeted": false
      },
      "worst_case_training": true
    },
    "epochs": 500,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10
  },
  "test": {
    "do": true,
    "test_epochs_interval": 1,
    "test_batch_size": 128
  },
  "logger": {
    "_comment": "index_batches decides if we index the loss and the metrics at every batch size or after one epoch (all batches)",
    "index_batches": false,
    "log_params": false,
    "log_train_images": false,
    "log_test_images": false,
    "tensorboard_logs": {
      "do": false
    },
    "sacred_logs": {
      "do": true,
      "mongo_url": "mongodb://192.168.178.26:27017",
      "db_name": "sacred-db",
      "settings": {
        "DISCOVER_SOURCES": "sys",
        "CAPTURE_MODE": "sys"
      }
    },
    "infrastructure_logs": {
      "do": true,
      "config": {
        "time": 5,
        "save_dir": "saved/",
        "metrics": [
          {
            "type": "CpuLoad"
          },
          {
            "type": "CpuTemp",
            "args": {
              "tmp_key": "k10temp"
            }
          },
          {
            "type": "GPUs"
          },
          {
            "type": "Memory"
          }
        ],
        "elk": {
          "elastic": {
            "host": "http://192.168.178.26:9200/",
            "index": {
              "name": "experiment-metrics",
              "config": {
                "mappings": {
                  "_default_": {
                    "_timestamp": {
                      "enabled": true,
                      "store": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}